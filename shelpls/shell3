#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <limits.h>
#include <sys/wait.h>
#include "main.h"
#define MAX_PATH_LENGTH 4096
int main()
{
	char *cmd, *arg;
	char **args;
	int arg_index;
	char *line = NULL;
	size_t i = 0;
        int len; 
	
	int status;
	pid_t pid;
	

	while (1)
	{
		puts("$ ");
		cmd = NULL;

		if (getline(&line, &i, stdin) == -1)
		{
			puts("no input to read");
			break;
		}
		len = strlen(line);
		if (len > 0 && line[len-1] == '\n') {
			line[len-1] = '\0';
		}
		args = malloc(sizeof(char*) * (len + 1));
		arg_index = 0;
		arg = strtok(line, " ");
		while (arg != NULL) {
			args[arg_index++] = arg;
			arg = strtok(NULL, " ");
		}
		args[arg_index] = NULL;
                cmd = args[0];

		pid = fork();
		if (pid == -1)
		{
			perror ("errno");
			exit(1);
		}
		else if (pid == 0)
		{
			if (execvp(cmd, args) == -1)
			{
				perror("execvp");
				exit(1);
			}
		}
		else
		{
			waitpid(pid, &status, 0);
		}
		
		if (strncmp(cmd, "exit", 5) == 0)
		{
			status = atoi(&cmd[5]);
			exit(status);
		}
	}
	free(line);
	return 0;
}
